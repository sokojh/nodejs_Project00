<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>chat</title>
    <link rel="stylesheet" href="/public/css/chat.css" />
    <!-- 구글폰츠 아이콘 -->
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"
    />
  </head>
  <body>
    <!-- 상단바 -->
    <nav>
      <div id="weeksomId">
        <a href="http://localhost:7080/">
          <img
            src="https://image-upload-server1.s3.ap-northeast-2.amazonaws.com/weeksom_logo.svg"
            alt=""
          />
        </a>
      </div>
      <div id="navIcon">
        <div onclick="chat()">
          <i class="fi fi-rr-menu-burger"></i>
        </div>
      </div>
    </nav>

    <div class="container">
      <!-- 채팅창 활성화버튼 -->
      <input type="checkbox" id="chat" />

      <!-- 친구찾기화면 -->
      <div class="col_1">
        <div class="search">
          <input type="text" value="    test6" placeholder="weeksomId" name="weeksomId" id="chatSearch" />
          <button onclick="chatSearch()" class="chatSearch">search</button>
        </div>
        <div id="friends"></div>
      </div>

      <script>
        chatSearch.addEventListener('keypress', (event) => {
  // input 창에서 키프레스 이벤트가 발생할 때 이벤트를 인자로 넘겨줌
  if (event.keyCode === 13) {
    send() // 이벤트 키코드가 13 = 엔터면 실행한다
    chatSearch.value = '' // 텍스트박스 초기화
  }
})
      </script>

      <!-- 채팅창 -->
      <div class="col_2">
        <div class="wrapper">
          <div class="user-container">
            <input id="nickname" type="text" value="<%= user.weeksomId%>" />
            <label for="nickname">대화명</label>
          </div>
          <div class="display-container">
            <ul class="chatting-list"></ul>
            <!-- 채팅을 li 구조로 늘어놓게 함 -->
          </div>
          <div class="input-container">
            <span>
              <input type="text" class="chatting-input" />
              <button class="send-button">전송</button>
            </span>
          </div>
        </div>
      </div>
    </div>

    <script>
      const myImg = '<%= user.profileImgKey %>'
      const myId = '<%= user.weeksomId %>'
      let urImg = ''

      const chat = () => {
        const chatbtn = document.getElementById('chat')
        chatbtn.checked = !chatbtn.checked
      }

      async function chatSearch() {
        // 검색할 유져 아이디값
        const weeksomId = document.getElementById('chatSearch').value
        const url = 'http://localhost:7080/chat'
        // 디비에서 유져 검색
        await fetch(url, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ weeksomId }),
        })
          .then((data) => {
            return data.json()
          })
          .then((data) => {
            // 디비에서 유져 검색해서 받아온 데이터
            urImg = data.profileImgKey
            urId = data.weeksomId
            const friends = document.getElementById('friends')
            const newDiv = document.createElement('div')
            const template = `<div class="searchUser" onclick="room(this)">
              <div class="imgBox">
                <img
                src="${urImg}"
                alt=""
                />
                </div>
                <div class="weeksomId">${urId}</div>
                </div>`
            newDiv.innerHTML = template
            friends.appendChild(newDiv)
          })
      }
    </script>

    <!-- socket io 라이브러리 -->
    <script
      src="https://cdn.socket.io/4.1.2/socket.io.min.js"
      integrity="sha384-toS6mmwu70G0fw54EGlWWeA4z3dyJ+dlXBtSURSKN4vyRFOcxd3Bzjj/AoOwY+Rg"
      crossorigin="anonymous"
    ></script>
    <script src="/public/js/chat.js"></script>
  </body>
</html>
