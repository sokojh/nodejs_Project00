  </head>
  <!-- Jqeury -->
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>

  <!-- dateFormating -->
  <script>
    const getDate = (writeDate) => {
      let writeDateFormat = new Date(writeDate)
      let writeDday = new Date().getDate() - writeDateFormat.getDate();
      (writeDday != 1) ? document.write(writeDday + '일 전') : document.write('오늘')
    }
  </script>
  <!--연습-->
 <script>
  $(".hover").mouseleave(
    function () {
      $(this).removeClass("hover");
    }
  );

 </script>
  <body> 
    <!-- top nav -->
    <%- include('htmlPiece/nav.html') %>   


  

<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        



      <div class="modal-footer">
        <input></input>
        <button type="button" class="btn btn-primary">게시</button>
      </div>
    </div>
  </div>
</div>
</div>
    <!-- 게시물 출력 -->
    <div class="container">
    <div class="row">
    <% articles.forEach(element => { %>
        
        <!-- 메인 이미지 영역 -->
        <figure class="col-1 snip1200">
          <img src="<%= element.contentImgKey[0] %>" class="" alt="...">
          <figcaption>
            <center><p>💬<%= element.commentCount %> 🤍<%=element.likeCount%> </p></center>
            
            
          </figcaption>
          <a href="#" data-toggle="modal" data-target="#exampleModalCenter"></a>
            <!-- 발행 날짜 -->
          <!--<p class="postDate mt-2"><script>getDate('<%# element.createDate %>')</script></p>
          <span class="badge badge-success badge-pill">좋아요<%# element.likeCount %></span>-->
        </figure>
        
      
  
          
       
          
      
    <% }) %>
</div>
</div>
