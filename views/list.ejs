  <body> 

    <%- include('nav.html') %>   

        <h4 class="ml-2 my-3 text-center">서버에서 가져온 할일 리스트</h4>
        <div class="container">
        <ul class="list-group">  
          <% for (var i =0; i< posts.length; i++){ %>
          <li class="list-group-item">
            <p>글번호 ㅣ <%= posts[i]._id %></p>  
            <h4><a href="/detail/<%= posts[i]._id %>">  할일 제목 : <%= posts[i].제목 %></a> </h4>    
            <p>할일 마감날짜 : <%= posts[i].날짜 %>  </p>    
            <button type="button" class="btn btn-primary" data-id="<%= posts[i]._id %>"  onclick = moveEdit();>수정</button>
            <button type="button" class="btn btn-danger" data-id="<%= posts[i]._id %>">삭제</button>  
            <script type="text/javaScript">
              function moveEdit(){
                   location.href = "/edit/<%= posts[i]._id %>";
              }
              </script> 
          </li>  
            <% }%>   
        </ul> 
        </div>
        <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
        
        <script>
            $('.btn-danger').click(function(e){  
              var 글번호 = e.target.dataset.id;
              var 지금누른거 = $(this);
               
              $.ajax({ 
              method : 'DELETE',
              //'요청할경로'  
              url : '/delete',
              //'요청과 함께 보낼데이터' 
              data : {_id : 글번호 }  
               

            }).done(function(결과){
              //요청이 성공하면 요걸 실행해주세요~
              console.log('성공했어염') 
              지금누른거.parent('li').fadeOut(); 

              }).fail(function(xhr,textStatus,errorThrown){
                console.log(xhr,textStatus,errorThrown); 
              });
            })
            //서버에 새로고침없이 /delete 경로로 DELETE 요청을 할거에요~

 
          </script> 



