          <a href="" class="float-end btn-profile"><i class="material-icons">more_horiz</i></a>
        </div>
        
        <!-- 이미지 영역 -->
        <div class="imgBox">
          <img src="<%= element.contentImgKey[0] %>" class="card-img-top" alt="...">
        </div>
  
        <!-- 하단 영역 -->
