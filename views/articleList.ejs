          <!-- 좋아요 수 -->
          <a href=""><h5 class="card-title"><b>좋아요 <span class="likeCount<%= element._id %>"><%= element.likeCount %></span>개</b></h5></a>
  
          <!-- 메인 글 -->
          <p class="card-text"><a href=""><span class="name-profile mr-2"><%= element.auther.weeksomId %></span></a><%= element.contentText %></p>
          <!-- 더 보기 <a href=""><span class="more ml-1">...더 보기</span></a> -->

          <!-- 댓글 모두보기 -->
          <a href=""><p class="card-text mb-2">댓글 더 보기</p></a>
  
          <!-- 댓글 미리보기
          <div class="comment_box d-flex">
            <a href="" class="comment-name mr-2"><p><span class="name-profile">easy</span></p></a>
            <p><span class="comment-comment">여기 댓글 맛집이네</span></p>
            <a href="" class="comment-like ml-auto"><p><span class="material-icons">favorite_border</span></p></a>
            활성화 <a href="" class="like-btn mr-3"><span class="material-icons">favorite</span></a>
          </div>
          <div class="comment_box d-flex">
            <a href="" class="comment-name mr-2"><p><span class="name-profile">chan</span></p></a>
            <p><span class="comment-comment">강아지는 역시 강아지죠</span></p>
            <a href="" class="comment-like ml-auto"><p><span class="material-icons">favorite_border</span></p></a>
            활성화 <a href="" class="like-btn mr-3"><span class="material-icons">favorite</span></a>
          </div> -->
  
          <!-- 발행 날짜 -->
          <p class="postDate mt-2"><script>getDate('<%= element.createDate %>')</script></p>
        </div>
      </div>
    <% }) %>




    <br><br><br><br><br><br><br>

    <!-- 하단 nav 아이콘 활성화를 위한 페이지 이름지정,  -->
    <%- include('htmlPiece/bottomNav.html') %>

    <!-- 부트스트랩 -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-Piv4xVNRyMGpqkS2by6br4gNJ7DXjqk09RmUpJ8jgGtD7zP9yug3goQfGII0yAns" crossorigin="anonymous"></script>

    <!-- ajax -->
    <script>
      $(function(){
        // like 처리
        $('.like-btn').click(function(){
          var thisSpan = $(" span" ,this)
          var articleId = $(this).attr('id')
          var like = ".likeCount"+articleId
          if (thisSpan.text() == 'favorite_border') {
            $.ajax({
              url : '/',
              type : 'post',
              data : articleId
            }).done( (result) => {
              thisSpan.text('favorite')
              thisSpan.css('color', 'red')
            }).fail( (err) => {
              thisSpan.text('favorite')
              thisSpan.css('color', 'red')
              $(like).text(Number($(like).text())+1)
            })
          } else {
            $.ajax({
              url : '/',
              type : 'post',
              data : articleId
            }).done( (result) => {
              thisSpan.text('favorite_border')
            }).fail( (err) => {
              thisSpan.text('favorite_border')
              thisSpan.css('color', '')
              $(like).text(Number($(like).text())-1)
            })
          }
          
        })
      })
    </script>
  </body>
</html>