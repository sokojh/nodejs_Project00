  <!-- dateFormating -->
  <script>
    const getDate = (writeDate) => {
      let writeDateFormat = new Date(writeDate)
      let writeDday = new Date().getDate() - writeDateFormat.getDate();
      (writeDday != 1) ? document.write(writeDday + '일 전') : document.write('오늘')
    }
  </script>
  <body> 
    <!-- top nav -->
    <%- include('htmlPiece/nav.html') %>   
        
    <!-- test article -->
    <div class="feedBox card w-75 h-50 mb-5">
      <!-- 상단 영역 -->
      <div class="var-profile p-3">
        <div class="img-profile float-start"><img src="https://w.namu.la/s/cf33f7e97cb083f0e87192b5871f2dd0768ac458c966c1633d89cba4f26292ec42f91f0a68c60e1e57584c54ec15e5a1649b6a01b5bd0663b11490d2d6cc06911b442520a1fba401b3d30fd6e639ba20fb141e394a5ea8b1c85a0f35cd1ecfbfe9d849beefbd592af33a2742d4b97722" alt=""></div>
        <div class="main-name-profile float-start ml-2">taeyeon_ss</div>
        <a href="" class="float-end btn-profile"><i class="material-icons">more_horiz</i></a>
      </div>
      
      <!-- 이미지 영역 -->
      <div class="imgBox">
        <img src="https://dangdangee.com/wp-content/uploads/2021/02/3-4.jpg" class="card-img-top" alt="...">
      </div>

      <!-- 하단 영역 -->
      <div class="card-body">
        <!-- 좋아요, 코멘트, DM 버튼 -->
