          <a href="" class="like-btn mr-3"><span class="material-icons">mail_outline</span></a>
          
          <a href="" class="like-btn ml-auto"><span class="material-icons">bookmark_outline</span></a>
          <!-- 활성화 <a href="" class="like-btn mr-3"><span class="material-icons">bookmark</span></a> -->
        </div>

        <!-- 좋아요 수 -->
